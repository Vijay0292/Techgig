//Multiply number of vowels and consonants
#include<bits/stdc++.h>
using namespace std;
void space (string str)
{
    int count =0;
     cin>>str;
    for(int i=0; i<=sizeof(str); i++)
    {
        if(str[i]=='a'||str[i]=='e'||str[i]=='i'||str[i]=='o'||str[i]=='u')
        {
            count++;
        }
    }
    int x = str.length() - count;
    int y = x*count;
    cout<<count<<" "<<x<<" "<<y<<endl;
}
int main()
{
    int N; cin>>N;
    string st;
    for(int i=0; i<N;i++)
    {
        space(st);
    }
    return 0;
}
